package KiemTraLaiGiuaKi;

import java.util.Scanner;

public class De02 {
	private static void TichSoLe() {
		Scanner hi = new Scanner(System.in);
		int n;
		int tich = 1;

		do {
			System.out.println("Nhập số nguyên dương: ");
			n = hi.nextInt();
			if (n < 0)
				System.out.println("Vui lòng nhập số nguyên dương");
		} while (n < 0);

		do {
			if (n % 2 == 1) {
				tich *= (n % 10);
			}
			n /= 10;
		} while (n != 0);

		System.out.println("Tích của các số lẻ là: " + tich);
	}

	public static void main(String[] args) {
		Scanner hi = new Scanner(System.in);
		int tl = 0;
		do {
			TichSoLe();
			System.out.println("Nhập 1 để tiếp tục, 0 để kết thúc chương trình");
			tl = hi.nextInt();
			if (tl == 0)
				System.out.println("Chương trình đã kết thúc");
		} while (tl == 1); //done
	}
}
