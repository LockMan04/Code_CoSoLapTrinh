package KiemTraLaiGiuaKi;

import java.util.Scanner;

public class De01 {
	private static void DemSoChan() {
		Scanner hi = new Scanner(System.in);
		int n, test, dem = 0;

		do {
			System.out.println("Nhập số nguyên dương: ");
			n = hi.nextInt();
			if (n < 0)
				System.out.println("Vui lòng nhập số nguyên dương");
		} while (n < 0);

		do {
			test = n % 10;
			if(test % 2 == 0) {
				dem++;
			}
			n /= 10;
		} while (n != 0);

		System.out.println("Số kí số chẵn là: " + dem);
	}

	public static void main(String[] args) {
		Scanner hi = new Scanner(System.in);
		int tl = 0;
		do {
			DemSoChan();
			System.out.println("Nhập 1 để kết thúc, nhập 0 để tiếp tục");
			tl = hi.nextInt();
			if (tl == 1)
				System.out.println("Chương Trình Đã Kết Thúc");
		} while (tl == 0);
	}
}
